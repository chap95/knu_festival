    </div>

  <div class="field row">
    <div class="col-4"><%= form.label :"제목" %></div>
    <div class="col-8"><%= form.text_field :title, id: :fleamarket_title, class: "form-control" %></div>
  </div>

  <div class="field row">
    <div class="col-4"><%= form.label :"메뉴 혹은 내용" %></div>
    <div class="col-12"><%= form.text_area :content, id: :fleamarket_content, class: "form-control", rows: "5" %></div>
  </div>

  <div class="field row" style="margin-top: 30px">
    <div class="col-4"><%= form.label :'추가메시지' %></div>
