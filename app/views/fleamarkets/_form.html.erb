<%= form_with(model: fleamarket, local: true) do |form| %>
  <% if fleamarket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fleamarket.errors.count, "error") %> prohibited this fleamarket from being saved:</h2>

      <ul>
      <% fleamarket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <div class="field" style="text-align:center;">
      <%= form.label :'함인섭(1)' %>
      <%= form.radio_button :number, '1' , checked: true%>   &nbsp;  
      <%= form.label :'미래(2)' %>
      <%= form.radio_button :number, '2' %>   &nbsp;
      <%= form.label :'동문(3)' %>
