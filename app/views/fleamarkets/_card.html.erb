<% @fleamarkets.each do |x| %>

<div class="container">
	<div class="row">
	    <div class="col-md-4">
		<!--Card-->
            <div class="card" style="margin-bottom: 2%;">
                <!--Card image-->
                <img class="img-fluid" src="<%=x.image%>" alt="Card image cap">
            
                <!--Card content-->
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title" style="text-align: center; border-bottom: 1px solid black;"><%= x.title %></h4>
                    <!--Text-->
                    <p class="card-text" style="text-align: center;"><%= x.content %></p>
                    <button style="display: table; margin: 0 auto;" type="button" class="btn btn-light btn-xs" data-toggle="modal" data-target="#flipFlop">
                        정보 보기
                    </button>
            <!-- The modal -->
                <div class="modal fade" id="flipFlop" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modalLabel">Flip-flop</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <%= x.modal %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                </div>
                </div>
                </div>
                </div>
            </div> 
        <!--/.Card-->
        </div>
	</div>
</div>

<% end %>