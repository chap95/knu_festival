<!--플리마켓 모달카드 변경함 현석이형꺼에서 수정해서 완성-->
<div>
<button type="button" class="btn btn-warning food-item " data-toggle="modal" data-target="#food-modal" style="width: 100%; margin-bottom: 7px">

  <!--카드 이미지 업로드 만들면 여기로 이미지가 들어옴 모달을 따로 만들어야함-->
  <img class="img-fluid" src="<%=x.image%>" style="width: 50px">
  <div style="margin-top: 5px; font-size: 15px; font-family: 'BMJUA'; text-align: center;">
    <%= x.title %>
  </div>
</button>
</div>
<!-- The modal -->
<div class="modal fade" id="food-modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <h4 class="modal-title" id="modalLabel" style="margin-left: 45%"><%= x.title %></h4>
      </div>
      <div class="modal-body" style="display: table; margin: 0 auto;">
        <%= x.modal %>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-secondary" style="display: table; margin: 0 auto;" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!--/.Card-->
