<div>
  <h1 style=" margin: auto;" class="food_truck">푸드 트럭</h1>
</div>
<table>

  <tbody >
    <% @foods.each do |food| %>
      <tr>
        <td>
          <button type="button" class="btn btn-primary btn-custom col" data-toggle="modal" data-target="#food-modal-<%=food.id %>" style="margin:0 30px;">
            <%= food.title %>
          </button>
        </td>
      </tr>
      
      <div class="modal fade" id="food-modal-<%=food.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle"><%= food.title %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= food.content %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path %>
